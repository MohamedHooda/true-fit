{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022"],
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": ["types", "node_modules/@types", "node"],
        "baseUrl": "./",
        "paths": {
            "*": ["src/*", "node_modules/*"]
        },
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "src/types/authorisationModels.js",
        "src/auth/requestAuthorisation"
    ],
    "exclude": ["node_modules", "<node_internals>/**"],
    "ts-node": {
        "files": true
    }
}
